{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },
    {
      "name": "debug",
      "hidden": true,
      "inherits": [ "base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "hidden": true,
      "inherits": [ "base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "dist",
      "hidden": true,
      "inherits": [ "base" ],
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "inherits": [ "base" ],
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": "Windows",
          "intelliSenseMode": "windows-msvc-x64",
          "disableExternalAnalysis": true,
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true,
          "clangTidyChecks": "-*"
        }
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "ORION_CXX_FLAGS": "/permissive-;/W4;/WX;/external:anglebrackets;/external:W0"
      }
    },
    {
      "name": "msvc-x64-debug",
      "inherits": [ "msvc", "debug" ],
      "displayName": "MSVC x64 Debug"
    }
  ]
}